<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/styles.css" rel="stylesheet" type="text/css">
    <title>Insights</title>
</head>
<body>
    <nav class="nav-bar">
        <div class="nav-logo">
            <a href="/dash<%=role%>"><img src="/assets/home.png"></a>
        </div>    
        <div class="nav-list">
            <ul>
                <li><a href="/browse">Browse</a></li>
                <li><a href="/insightslisten">Insights</a></li>
                <li><a href="/musicplayer">MusicPlayer</a></li>
                <li><a href="/account">Account</a></li>
                <li><a href="/">Logout</a></li>
            </ul>
        </div>
    </nav>
    <div class="big-container">
        <form class="form-b" action="/insightsListen/listenerReport" method="POST">
          <div>
            <p class="text-color">Artist first name</p>
            <input
            type="text"
            id="artist_fname"
            name="artist_fname">
          </div>
          <div>
            <p class="text-color">Artist last name</p>
            <input
            type="text"
            id="artist_lname"
            name="artist_lname">
          </div>
          <div>
            <p class="text-color">Genre Type</p>
            <select id="genre" name="genre">
              <option value=0>Any Genre</option>
              <option value="pop">pop</option>
              <option value="r&b">r&b</option>
              <option value="hip hop">hip hop</option>
              <option value="pop rock">pop rock</option>
            </select>
          </div>
          <div>
            <input type="reset" value="Clear Form" class="auth_button login_button">
            <input
            type="submit"
            value="View Report"
            class="auth_button login_button">
          </div>
        </form>
      </div>
    <section class="section-f">
    <h1 class="h1-f">Reports</h1>
    <div class="tbl-header">
      <table class="table-f" cellpadding="0" cellspacing="0" border="0">
        <thead>
          <tr>
            <th class="th-f">Artist name</th>
            <th class="th-f">Song</th>
            <th class="th-f">Song Genre</th>
            <th class="th-f">Total Play Count</th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="tbl-content">
      <table class="table-f" cellpadding="0" cellspacing="0" border="0">
        <tbody>
          <%
          if(z.length!=0){
          var i=0;
          z.forEach(function(data){
          %>
          <tr>
            <td class="td-f"><%=data.artist_f_name + ' ' + data.artist_l_name %></td>
            <td class="td-f"><%=data.song_name %></td>
            <td class="td-f"><%=data.song_genre %></td>
            <td class="td-f"><%=data.count %></td>
          </tr>
          <%  i++; }) %>
          <% } else{ %>
          <tr>
            <td class="td-f" colspan="4">No Data Found</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

</body>
</html>